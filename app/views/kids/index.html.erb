<% provide(:title, "All kids") %>
<h1>All kids</h1>

<span id="tag_cloud">
  <% tag_cloud Kid.appearance_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</span>

<div id="tag_cloud">
  <% tag_cloud Kid.place_counts, %w[s m l] do |tag, css_class| %>
    <%= link_to tag.name, tag_path(tag.name), class: css_class %>
  <% end %>
</div>

<%= will_paginate %>

<ul class="users">

<%= render @kids %>

</ul>

<%= will_paginate %>
