<% provide(:title, @title) %>
<div class="row">
  <aside class="span4">
	<section>
	<%= gravatar_for(@user) %>
	<h1><%=link_to @user.name, @user%></h1>
	<span><b>Posts:</b><%=link_to @user.microposts.count, @user %></span>
	</section>
  </aside>
  <div class="span8">
    <h3><%= @title %></h3>
    <% if @users.any? %>
      <ul class="users">
        <%= render @users %>
      </ul>
      <%= will_paginate %>
    <% end %>
  </div>
</div>
